[Unit]
Description=Octopoda Brain Deamon from ICN Platform Project
StartLimitIntervalSec=1
[Service]
Type=simple
Restart=always
RestartSec=1
User=root
ExecStart=/root/octopoda/brain
ExecStop=kill -9 $(pidof brain)
ExecReload=kill -9 $(pidof brain) && /root/octopoda/brain

[Install]
WantedBy=multi-user.target